# =============================================================================
# Palmonas CRM - Environment Configuration
# Copy this file to .env and fill in the values
# =============================================================================

# --- PostgreSQL ---
POSTGRES_DB=palmonas_crm
POSTGRES_USER=palmonas
POSTGRES_PASSWORD=changeme_strong_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# --- Redis ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password

# --- JWT ---
JWT_SECRET=changeme_use_a_64_char_random_string_here_for_hs512_signing_key_minimum
JWT_ACCESS_TOKEN_EXPIRY=900000
JWT_REFRESH_TOKEN_EXPIRY=604800000

# --- Spring Boot ---
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# --- Rate Limiting ---
RATE_LIMIT_REQUESTS_PER_SECOND=100

# --- Channel Simulator ---
CHANNEL_SIMULATOR_FAILURE_RATE=0.1
CHANNEL_SYNC_CRON=0 */5 * * * *

# --- Logging ---
LOG_LEVEL=INFO
LOG_FORMAT=json

# --- Admin Seed ---
ADMIN_EMAIL=admin@palmonas.com
ADMIN_PASSWORD=Admin@123
